<%= turbo_frame_tag @turbo_frame_id do %>
  <div class="bg-[#f6f8fa] p-6 rounded rounded-tl-none">
    <% if @file.markdown? %>
      <div class="prose text-lg w-[80ch]">
        <%== @file.markdown_content %>
      </div>
    <% else %>
      <pre class="syntax overflow-x-scroll pb-4"><%== @file.content %></pre>
    <% end %>
  </div>
<% end %>
