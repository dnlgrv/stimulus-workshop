<div class="mx-auto pt-32 pb-4 px-4 min-h-screen flex">
  <article class=" w-full flex flex-col gap-14 lg:flex-row lg:gap-6">
    <div class="w-full order-2 lg:order-1">
      <%= render @exercise %>
    </div>

    <% if @exercise.instructions_available? %>
      <aside class="order-1 flex-shrink-0 rounded bg-white p-8 shadow max-h-[250px] overflow-y-scroll lg:max-h-none lg:self-start lg:overflow-auto lg:order-2 lg:w-1/3" data-layout-target="instructions">
        <%= render @exercise.instructions %>
      </aside>
    <% end %>
  </article>
</div>
