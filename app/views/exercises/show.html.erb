<% if @exercise.instructions_available? %>
  <div class="mx-auto pt-32 pb-4 px-4 min-h-screen flex">
    <article class="w-full flex gap-6">
      <div class="w-full">
        <%= render @exercise %>
      </div>

      <aside class="w-1/3 rounded bg-white p-8 shadow min-h-full" data-layout-target="instructions">
        <%= render @exercise.instructions %>
      </aside>
    </article>
  </div>
<% else %>
  <article class="mx-auto mt-44">
    <%= render @exercise %>
  </article>
<% end %>
