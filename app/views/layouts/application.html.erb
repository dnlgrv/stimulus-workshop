<!DOCTYPE html>
<html>
  <head>
    <title>Workshop</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <%= yield :head %>
  </head>

  <body class="bg-slate-50" data-controller="layout" data-layout-active-class="bg-slate-600" data-layout-hide-class="hidden">
    <%= render partial: "layouts/navigation", locals: { exercise: @exercise } %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
